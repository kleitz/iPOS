@{
    ViewBag.Tag = "PAWNING";
    ViewBag.Title = "Pawning";
}

<div data-bind="visible: isItemTypeShowedList">
    <div class="panel panel-flat">
        <div class="panel-heading">
            <h6 class="panel-title">Item type List</h6>
            <div class="heading-elements">
                <button data-bind="click: addItemType" type="submit" class="btn bg-orange-400 btn-labeled btn-labeled-right ml-10"><b><i class="icon-plus3"></i></b>Create new item type</button>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table text-nowrap" id="itemTypeTable">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Item Type</th>
                        <th class="text-center"><i class="icon-arrow-down12"></i></th>
                        <th>Id</th>
                        <th>Id</th>
                        <th>Id</th>
                        <th>Id</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Areas/Administrator/Assets/Model/pawning.model.js"></script>
    <script src="~/Areas/Administrator/Assets/ViewModel/pawning.viewmodel.js"></script>
}